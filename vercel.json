{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "headers": {
        "cache-control": "s-maxage=1,stale-while-revalidate"
      },
      "dest": "/index.html"
    }
  ],
  "env": {
    "API_URL": "@api_url",
    "REACT_APP_SERVER_URL": "@REACT_APP_SERVER_URL"
  },
  "build": {
    "env": {
      "REACT_APP_SERVER_URL": "@REACT_APP_SERVER_URL"
    }
  }
}
